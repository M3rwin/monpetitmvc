{% extends "layout.html.twig" %}
{% block contenu %}
    
    {% if unClient %}
        {% set idClient = unClient.getId() %}
    {% endif %}
    {% block recherche %}
        {% include 'rechercheClient.html.twig' %}
    {% endblock %}
    {% if unClient %}
    
        <div class="container">
        
    <p> <h2> Information du Client num√©ro {{ unClient.getId() }} </h2> </p>
    <p> {{ unClient.getPrenomCli() }} {{ unClient.getNomCli() }}  </p>
    <p> {{ unClient.getAdresseRue1Cli() }} </p>
    {% if unClient.getAdresseRue2Cli() %}
        <p>{{ unClient.getAdresseRue2Cli() }}</p>
    {% endif %}
    <p>{{ unClient.getCpCli() }} {{ unClient.getVilleCli() }}</p>
    <p>{{ unClient.getTelCli() }}</p>
    
    {% else %}
    
        <p class="text-center">{{ message }}</p>
        
    {% endif %}
    
    </div>
    
{% endblock %}
{% block footer %}
    {{ parent() }}
    <div class="text-center"> Fin de l'affichage </div>
{% endblock %}