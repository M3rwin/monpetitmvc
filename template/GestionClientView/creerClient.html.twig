{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="container">
        <h2>Nouveau client</h2>
        <form action="index. php?c=GestionClient&a=enregistreClient" method="post">
            <div class="form-group">
                <label for="titre">Titre</label>
                <select class="form-control" id="titre" name="titreCli" required>
                    <option>Choisir ...< /option>
                    <option>Monsieur</option>
                    <option>Madame</option>
                    <option>Mademoiselle</option>
                    k/select>
            </div>
            <div class="form-group">
                <label for="nom">Nom :</label>
                <input type="text" class="form-control" id="nom" placeholder="Nom :" name="nomCli" value="Roche" required>
                <label for="prenom">Prenom :</label>
                <input type="text" class="form-control" id="prenom" placeholder="Prenom" name="prenomCli" value="Benoit" required>
                <label for="adressel">Adresse :</label>
                <input type="text" class="form-control" id="prenom" placeholder="Adresse" name="adresseRuelCli" value="Les Lauriers" required>
                <label for="adresse2">Complement d'adresse :</label>
                <input type="text" class="form-control" id="adresse2" placeholder="Complement d'adresse (facultatif)" name="adresseRue2Cli" value="Avenue W. Churchill">
                <label for="CP">Code postal :</label>
                <input type="text" class="form-control" id="cp" placeholder="Code postal" name="cpCli" value="83000" required>
                <label for="ville">Ville :</label>
                <input type="text" class="form-control" id="ville" placeholder="Ville" name="villeCli" value="Toulon" required>
                <label for="tel">Ville :</label>
                <input type="tel" class="form-control" id="tel" placeholder="tel" name="telCli" value="0404040404">
            </div>
            <button type="submit" class="btn btn-default">Creer</button>
        </form>
    </div>
{% endblock %}
{% block footer %}
    {{ parent () }}
{% endblock %}