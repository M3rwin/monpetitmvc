{% extends "layout.html.twig" %}
{% block contenu %}
    
    {% if uneCommande %}
        {% set idCommande = uneCommande.getId() %}
    {% endif %}
    {% block recherche %}
        {% include 'rechercheCommande.html.twig' %}
    {% endblock %}
    {% if uneCommande %}
    
        <div class="container">
    <p> <h2> Information de la commande numéro {{ uneCommande.getId() }} </h2> </p>
    <p> Client : {{ leClient.getId() }} {{ leClient.getNomCli() }} {{ leClient.getPrenomCli() }} </p>
    <p> Date : {{ uneCommande.getDateCde() }} </p>
    <p> Numéro de la facture : {{ uneCommande.getNoFacture() }}</p>
    
    {% else %}
    
        <p class="text-center">{{ message }}</p>
        
    {% endif %}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    <div class="text-center"> Fin de l'affichage </div>
{% endblock %}